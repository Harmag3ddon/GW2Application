@page "/3"
<MudTabs Elevation="7" Rounded="true" Centered="true" ApplyEffectsToContainer="true" PanelClass="pa-4">
    <!--First Tab-->
    <MudTabPanel Text="Buy Items">
        <MudText>Content One</MudText>
    </MudTabPanel>
    <!--Second Tab-->
    <MudTabPanel Text="Sell Items">
        <MudText>Content Two</MudText>
    </MudTabPanel>
    <!--Third Tab-->
    <MudTabPanel Text="My Transactions">
        <MudGrid>
            <!--Left Panel-->
            <MudItem xs="12" sm="2">
                <MudPaper Width="200px" Class="py-3 mb-4" Elevation="3">
                    <MudNavMenu>
                        <MudNavGroup Title="Current Transactions" @bind-Expanded=_isExpanded>
                            <MudNavLink Href="/users">Buying</MudNavLink>
                            <MudNavLink Href="/security">Selling</MudNavLink>
                        </MudNavGroup>
                    </MudNavMenu>
                    <MudNavMenu>
                        <MudNavGroup Title="History" @bind-Expanded=_isExpanded2>
                            <MudNavLink Href="/users">Bought</MudNavLink>
                            <MudNavLink Href="/security">Sold</MudNavLink>
                        </MudNavGroup>
                    </MudNavMenu>
                </MudPaper>
                <MudPaper Width="200px" Class="py-3 mb-4" Elevation="3">
                    Placeholder for Items and gold
                </MudPaper>
            </MudItem>
            <!--Right Panel-->
            <MudItem xs="12" sm="10">
                <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                    PLACEHOLDER FOR TABLE FOR ITEMS
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudTabPanel>
    <!--Fourth Tab-->
    <MudTabPanel Text="Tab Disabled" Disabled="true">
        <MudText>Content Disabled</MudText>
    </MudTabPanel>
</MudTabs>






@code {
    bool _isExpanded = true;
    bool _isExpanded2 = true;
}
